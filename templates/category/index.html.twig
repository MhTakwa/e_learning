{% extends 'base_admin.html.twig' %}

{% block title %}Category index{% endblock %}
{%block stylesheets%}
    <style>

        .submit{
            margin-left: 90%;
            margin-bottom: 10px;
        }
    </style>
{%endblock%}
{% block body %}
<div class="header">
    <h2>CATEGORIES</h2>
</div>

<div class="body">
    <a href="{{path('category_new')}}" class="submit btn btn-primary m-t-15 waves-effect">ADD CATEGORY</a>
</br>
    
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Label</th>
                   
                  
                    <th></th>
                </tr>
            </thead>
           
            <tbody>
                {% for category in categories %}
                    <tr  class="clickable_row" data-href="{{ path('category_edit', {'id': category.id}) }}">
                        <td>{{ category.id }}</td>
                        <td>{{ category.label }}</td>
                        
                      
                       
                        <td>
                            <a href="{{ path('category_delete', {'id': category.id}) }}">delete</a>
                           
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
        </table>
    </div>
</div>
 
{% endblock %}
{%block scripts%}
<script>
 $('.clickable_row').on('click',function(){
    window.location = $(this).data("href");
 });  
</script>
{%endblock%} 
