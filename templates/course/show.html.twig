{% extends 'base_admin.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ course.label }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ course.price }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ course.discount }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ course.duration }}</td>
            </tr>
            <tr>
                <th>Available_places</th>
                <td>{{ course.availablePlaces }}</td>
            </tr>
         
            <tr>
                <th>ShortDesc</th>
                <td>{{ course.shortDesc }}</td>
            </tr>
            <tr>
                <th>LongDesc</th>
                <td>{{ course.longDesc }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ course.startDate ? course.startDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('course_index') }}">back to list</a>

    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
